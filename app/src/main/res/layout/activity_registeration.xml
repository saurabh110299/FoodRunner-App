<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:orientation="vertical"
    tools:context=".activity.RegistrationActivity">

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_arrow_back"
        android:gravity="center_horizontal"
        android:drawableTint="#ffffff"
        android:paddingBottom="10dp"
        android:text="@string/register_yourself"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="2dp"
        android:hint="Name(Min 3characters)"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_mail"
        android:drawablePadding="2dp"
        android:hint="Email Address"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:inputType="number"
        android:drawableLeft="@drawable/ic_smartphone"
        android:drawablePadding="2dp"
        android:hint="Mobile Number(10 digit)"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="2dp"
        android:hint="Delivery Address"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="2dp"
        android:hint="Password (Min. 4 characters)"
        android:padding="10dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="2dp"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#EC0303"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</LinearLayout>